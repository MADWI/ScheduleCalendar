<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DownloadButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/scheduleColorAccent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/scheduleColorPrimaryDark</item>
        <item name="spinning_bar_color">@color/white</item>
        <item name="spinning_bar_padding">@dimen/spinning_bar_padding</item>
    </style>
    
    <declare-styleable name="CircularProgressButton">
        <attr name="spinning_bar_color" format="color" />
        <attr name="spinning_bar_padding" format="dimension" />
    </declare-styleable>
</resources>
