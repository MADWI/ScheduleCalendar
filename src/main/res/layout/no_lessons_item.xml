<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/no_lessons_layout_height"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/noLessonsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/no_lessons_text_padding_drawable"
        android:drawableStart="@drawable/ic_smile_24dp"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/no_lessons_text_padding_horizontal"
        android:paddingStart="@dimen/no_lessons_text_padding_horizontal"
        android:text="@string/no_lessons"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</LinearLayout>
